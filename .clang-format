
# BasedOnStyle
# The style used for all options not specifically set in the configuration.
# This option is supported only in the clang-format configuration (both within -style='{...}' and the .clang-format file).
# Possible values:
#   LLVM A style complying with the LLVM coding standards
#   Google A style complying with Google’s C++ style guide
#   Chromium A style complying with Chromium’s style guide
#   Mozilla A style complying with Mozilla’s style guide
#   WebKit A style complying with WebKit’s style guide
BasedOnStyle: Google

# TabWidth (unsigned)
# The number of columns used for tab stops.
TabWidth: 4

# IndentWidth (unsigned)
# The number of columns to use for indentation.
IndentWidth: 4

# ColumnLimit (unsigned)
# Number of columns to start breaking lines. Set it to 0 to disable.
ColumnLimit: 88

# UseTab (UseTabStyle)
# The way to use tab characters in the resulting file.
# Possible values:
#   UT_Never (in configuration: Never) Never use tab.
#   UT_ForIndentation (in configuration: ForIndentation) Use tabs only for indentation.
#   UT_Always (in configuration: Always) Use tabs whenever we need to fill whitespace that spans at least from one tab stop to the next one.
UseTab: Never

# AlignConsecutiveMacros (boolean)
# Align macro column when they are don't have any line between them.
AlignConsecutiveMacros: true

# AllowShortFunctionsOnASingleLine (boolean)
# Don't put function in a single line if it fit. 
AllowShortFunctionsOnASingleLine: false

# AllowShortEnumsOnASingleLine (boolean)
# Don't put enum in a single line if it fit. 
AllowShortEnumsOnASingleLine: false
